@model IEnumerable<CarRental.Models.Car>
@{
    ViewBag.Title = "Cars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cars</h2>

<table id="cars" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Car</th>
            <th>Type of car</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


@section scripts
    {
    <script>
        $(document).ready
            (function () {
                var table = $("#cars").DataTable({
                    ajax: {
                        url: "/api/cars",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name"
                        },
                        {
                            data: "typeOfCar.name"
                        }
                    ]

                });
            }
            );
    </script>
}

