@model CarRental.ViewModels.CarFormViewModel

@{
    ViewBag.Title = "CarFormViewModel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Cars"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Car.Name)
        @Html.TextBoxFor(c => c.Car.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Car.ReleaseDate)
        @Html.TextBoxFor(m => m.Car.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Car.TypeOfCarId)
        @Html.DropDownListFor(m => m.Car.TypeOfCarId, new SelectList(Model.TypeOfCars, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Car.NumberInStock)
        @Html.TextBoxFor(m => m.Car.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Car.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
